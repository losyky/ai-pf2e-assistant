<script>
// 材料搜索功能
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('material-search');
  if (searchInput) {
    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      const items = document.querySelectorAll('.item-list .item');
      
      items.forEach(item => {
        const itemName = item.querySelector('.item-name').textContent.toLowerCase();
        const itemDesc = item.querySelector('.item-description').textContent.toLowerCase();
        
        if (itemName.includes(searchTerm) || itemDesc.includes(searchTerm)) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  }
  
  // 类别选择变化处理
  const categorySelect = document.getElementById('synthesis-category');
  if (categorySelect) {
    categorySelect.addEventListener('change', function() {
      const classNameGroup = document.querySelector('.class-name-group');
      if (this.value === 'class') {
        classNameGroup.style.display = 'block';
      } else {
        classNameGroup.style.display = 'none';
      }
    });
  }
});
</script>
